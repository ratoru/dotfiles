// Static tasks configuration.
[
  {
    "label": "start lazygit",
    "command": "lazygit",
    "args": ["-p", "$ZED_WORKTREE_ROOT"],
    "hide": "on_success",
    "shell": {
      "program": "sh"
    },
    "tags": ["git"]
  },
  {
    "label": "start lazygit file log",
    "command": "lazygit",
    "args": ["-f", "$ZED_RELATIVE_FILE"],
    "hide": "on_success",
    "shell": {
      "program": "sh"
    },
    "tags": ["git"]
  }
]
